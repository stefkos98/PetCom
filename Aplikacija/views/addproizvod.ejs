<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>
    <%- include('partials/navbar.ejs'); %>
    <div class='container'>
        <br>
        <div class='row'>
            <div style='width:35%;margin:0 auto;'>
                <h2 style='text-align: center;'>Dodaj novi proizvod</h2>

                <form action='/prodavnica/<%=prodavnica%>' method='post'>
                    <div class='form-group'><input type='text' class='form-control' placeholder="Naziv proizvoda"
                            name='ime' /></div>
                    <div class='form-group'><input type='number' min='1' step='1' class='form-control'
                            placeholder="Kolicina" name='kolicina' /></div>
                    <div class='form-group'><input type='number' min='1' step='0.01' class='form-control'
                            placeholder="Cena" name='cena' /></div>
                    <div class='form-check'><input type='checkbox' id="odaberi" class='form-check-input' placeholder="Akcija"
                            name='akcija' />
                        <label class="form-check-label" for="defaultCheck1">
                            Proizvod na akciji
                        </label></div>
                    <div class='form-group'><input id="akcija" style="display:none" type='number' min='1' step='0.01'
                            class='form-control' placeholder="Akcijska cena" name='akcijskacena' /></div>
                   <h5>Kategorija proizvoda</h5>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Psi" name="kategorija" value="Psi" checked />
                        <label class="form-check-label" for="Psi">Psi</label><br> </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Macke" name="kategorija" value="Macke" />
                        <label class="form-check-label" for="Macke">Macke</label><br> </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Ptice" name="kategorija" value="Ptice" />
                        <label class="form-check-label" for="Ptice">Ptice</label><br> </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="MaleZivotinje" name="kategorija"
                            value="Male Zivotinje" />
                        <label class="form-check-label" for="MaleZivotinje">Male Zivotinje</label><br> </div>
                        <h5>Tip proizvoda</h5>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="tip" id="tip1" value="Poslastice" checked>
                            <label class="form-check-label" for="tip1">
                              Poslastice
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tip" id="tip2" value="Zivotinja">
                            <label class="form-check-label" for="tip2">
                              Zivotinja
                            </label>
                          </div>    
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tip" id="tip3" value="Hrana">
                            <label class="form-check-label" for="tip3">
                              Hrana
                            </label>
                          </div>   
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tip" id="tip4" value="Higijena">
                            <label class="form-check-label" for="tip4">
                              Higijena
                            </label>
                          </div>  
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tip" id="tip5" value="Igracke">
                            <label class="form-check-label" for="tip5">
                              Igracke
                            </label>
                          </div> 
                    <div class='form-group'><textarea rows="4" cols="30" name='opis' class='btn-block' placeholder="Opis proizvoda"></textarea></div>
                    <div class='form-group'> <input type='url' class='form-control' placeholder="URL slike proizvoda"
                            name='url' /></div>
                    <div class='form-group'> <button class='btn btn-lg btn-info btn-block form-control'
                            style='margin-top:5%;'>Dodaj novi proizvod</button> </div>

                </form>
            </div>
        </div>
    </div>

    <%- include ('partials/footer.ejs'); %>

    <script src="/addproizvod.js" async defer></script>
</body>

</html>