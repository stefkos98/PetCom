  <script>
    let proizvod =  <%- JSON.stringify(proizvod) %> ;
    var elementi = document.getElementsByClassName("korpa");
    elementi[0].addEventListener("click",async function () {
      var x=await funkcija();
      console.log(x);
      if (localStorage.getItem(`${proizvod._id}`) != null) {
        localStorage.setItem(`broj${proizvod._id}`, parseInt(localStorage.getItem(`broj${proizvod._id}`)) + parseInt(x));
      }
      else {
        localStorage.setItem(`${proizvod._id}`, JSON.stringify(proizvod));
        localStorage.setItem(`broj${proizvod._id}`, parseInt(x));
      }
    })   
  </script>
